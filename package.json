{
  "name": "wasmrogue",
  "version": "0.1.4",
  "description": "WASM rogue!",
  "main": "index.js",
  "scripts": {
    "wasm:pp": "ts-node src/build/preprocess.ts assembly/code.wat build/code.wat",
    "wasm:build": "wat2wasm build/code.wat -o build/code.wasm",
    "wasm:debug": "wat2wasm build/code.wat --debug-names -o build/code.wasm",
    "wasm:watch": "ts-node src/build/wasm-watch.ts",
    "rollup": "rollup -c",
    "watch": "rollup -cw",
    "build": "npm run wasm:pp && npm run wasm:build && npm run rollup"
  },
  "author": "Lag.Com <lagdotcom@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-typescript": "^8.2.1",
    "@rollup/plugin-url": "^6.0.0",
    "@types/watch": "^1.0.2",
    "rollup": "^2.52.3",
    "rollup-plugin-serve": "^1.1.0",
    "ts-node": "^10.0.0",
    "wat2wasm": "^3.0.0",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "wglt": "^0.2.5"
  }
}
